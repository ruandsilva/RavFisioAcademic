<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AdicionarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/pastaSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="33dp"
                android:paddingTop="29.3sp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/assuntoSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pastaSave"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="43dp"
                android:hint="Assunto"
                android:paddingTop="10.3sp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/conteudoSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assuntoSave"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:hint="ConteÃºdo"
                android:paddingTop="13.3sp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conteudoSave"
                android:layout_marginTop="35dp"
                android:onClick="funcSalvar"
                android:text="Salvar"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonRetornar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonSalvar"
                android:layout_marginTop="20dp"
                android:onClick="funcRetornar"
                android:text="Retornar"
                android:textSize="18sp" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>