<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".EditarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pastaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="33dp"
                android:paddingTop="29.3sp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/assuntoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pastaEdit"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="15dp"
                android:paddingTop="9.3sp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/conteudoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assuntoEdit"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="13.3sp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conteudoEdit"
                android:layout_marginTop="35dp"
                android:onClick="funcEditar"
                android:text="Editar"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonRetornar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonEditar"
                android:layout_marginTop="15dp"
                android:onClick="funcRetornar"
                android:text="Retornar"
                android:textSize="18sp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>